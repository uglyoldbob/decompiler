    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'decompiler'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=graph-reducer-testing",
                    "--package=decompiler",
                ]
            },
            "args": [
                "--output",
                "./reduce_failure"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'decompiler'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=decompiler",
                    "--package=decompiler"
                ],
                "filter": {
                    "name": "decompiler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}