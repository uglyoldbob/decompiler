{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "dependsOn": "format",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "always"
            }
        },
        {
            "label": "format",
            "type": "shell",
            "command": "cargo",
            "args": ["fmt"],
        }
    ]
}